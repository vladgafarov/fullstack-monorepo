{
   "extends": "tsconfig/nextjs.json",
   "compilerOptions": {
      "incremental": true,
      "baseUrl": ".",
      "paths": {
         "@components/*": ["components/*"],
         "@api/*": ["api/*"],
         "@public/*": ["public/*"],
         "@lib/*": ["lib/*"],
         "@redux/*": ["redux/*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
   "exclude": ["node_modules", "cypress"]
}
