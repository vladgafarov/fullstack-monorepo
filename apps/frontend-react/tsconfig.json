{
   "extends": "tsconfig/react-library.json",
   "include": ["src", "**/*.ts", "**/*.tsx"],
   "exclude": ["node_modules"],
   "compilerOptions": {
      "baseUrl": ".",
      "paths": {
         "@components/*": ["src/components/*"],
         "@api/*": ["src/api/*"],
         "@public/*": ["public/*"],
         "@lib/*": ["src/lib/*"]
      }
   }
}
